<div class="container-fluid">
	{% for post in posts %}
	<div class="row clearfix-col-sm-6 col-xs-12">
		<a href="{{ post.post_excerpt }}" target="_blank" />
			<h4>{{ post.title }}</h4>
		</a>
		{% if post.terms('tags') %} 
			{% for tag in post.terms('tags') %}
				<a href="{{ tag.link }}" />{{ tag.name }}</a>{% if loop.last == false %},{% endif %} 		
			{% endfor %}
		{% endif %}

		{{ post.content }}

		{% if post.terms('category') %} 
			{% for term in post.terms('category') %}
				<a href="{{ term.link }}" />{{ term.name }}</a>{% if loop.last == false %},{% endif %} 		
			{% endfor %}
		{% endif %}
	</div>
	{% endfor %}
</div>	
